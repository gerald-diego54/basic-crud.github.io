<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Customer Registration</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a
          class="navbar-brand fs-3"
          href="#"
          style="margin-right: 50px;"
        >Customer System</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/index">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/record">Records</a>
            </li>
          </ul>
          <form class="d-flex" style="padding-top: 10px;">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button
              class="btn btn-outline-primary"
              type="submit"
            >Search</button>
          </form>
        </div>
      </div>
    </nav>
    <br /><br />
    <br /><br />
    <div class="col-md-7 col-lg-8 container-fluid">
       {{#if message_success}}
    <div class="alert alert-success container text-center" role="alert">
        {{message_success}}
    </div>
    {{/if}}
    {{#if message_delete}}
    <div class="alert alert-danger container text-center" role="alert">
        {{message_delete}}
    </div>
    {{/if}}
      <form class="needs-validation">
        <h2>Customer Records</h2><br />
        <div class="table-responsive">
          <table class="table table-striped table-lg text-center">
            <thead>
              <tr>
                <th scope="col">Firstname</th>
                <th scope="col">Middlename</th>
                <th scope="col">Lastname</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Mobile Number</th>
                <th scope="col">Payment Type</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each user}}
                <tr>
                  <td>{{this.first_name}}</td>
                  <td>{{this.middle_name}}</td>
                  <td>{{this.last_name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.address}}</td>
                  <td>{{this.mobile_number}}</td>
                  <td>{{this.payment_type}}</td>
                  <td><a
                      class="btn btn-outline-warning btn-sm"
                      role="button"
                      href="/request/updates/{{this.email}}"
                    >Edit</a></td>
                  <td><a
                      class="btn btn-outline-danger btn-sm"
                      role="button"
                      href="/request/delete/{{this.email}}" onclick="return confirm(`Are you sure?`);"
                    >Delete</a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </form>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

